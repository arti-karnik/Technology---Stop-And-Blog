<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input blog-title" />
        <label class="form-label" for="content">Content</label>
        <textarea rows="5" cols="10" class="form-control blog-content" name="comment" minlength="6" required="required"> {{ post.content}} </textarea>
        <button type="submit" class="button edit-post">Update Post</button>
        <button type="button" class="button delete-post">Delete Post</button>
    </form>
</div>
{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
